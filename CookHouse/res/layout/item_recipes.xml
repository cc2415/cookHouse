<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp" 
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/iv_imag"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="4dp"
         />

    <TextView
        android:id="@+id/tv_recipesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_imag"
        android:singleLine="true"
        android:text="蜂蜜柚子茶"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/ll_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_recipesName"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_imag"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_bef_foodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="食材：" />

        <TextView
            android:id="@+id/tv_foodName"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="番茄,菜花,酱油,十三香粉,鸡精,料酒" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_food"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_imag"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_bef_decription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#99000000" 
            android:text="描述：" />

        <TextView
            android:id="@+id/tv_decription"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#99000000" 
            android:text="能与柚子产生相互作用的药物还很多" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_dec"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_imag"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_bef_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="访问数："
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="3124"
            android:textColor="#99000000" />
    </LinearLayout>

</RelativeLayout>